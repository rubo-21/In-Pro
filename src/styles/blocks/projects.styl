.b-projects
	position relative
	width 100%
	height auto
	margin 0 auto
	&__item
		min-width 980px
		max-width 1175px
		margin 20px auto
		padding 70px 0
		clearfix()
		&__leftSide,
		&__rightSide
			float left
		&__rightSide
			width 740px
			margin-left 20px
		&__image img
			width 370px
		&__header
			font-size 36px
			color #1a1a18
		&__text
			margin-top 25px
			font-size 20px
			color #6e6e6e
		&__more
			margin-top 25px
			font-size 20px
			color #008ad1
			text-decoration underline
			&:hover
				cursor pointer
				opacity .7
		&__review
			width 187px
			height 47px
			margin-top 35px
			border 2px solid #008ad1
			line-height 47px
			text-align center
			font-size 20px
			color #008ad1
			&:hover
				cursor pointer
				opacity .7
		&__bg
			&::before
				content " "
				position relative
				display block
				left 0
				width 100%
				height 300px
				background url('../img/project_bg.png') center no-repeat
				background-size 100% 100%
	&__plus
		width 51px
		height 51px
		margin 50px auto
		border-radius 51px
		border 2px solid #d1d1d1
		text-align center
		line-height 51px
		color #d1d1d1
		&:hover
				cursor pointer
				opacity .7
