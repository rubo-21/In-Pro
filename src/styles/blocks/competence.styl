	background url('../img/competence_bg2.jpg') center no-repeat
	background-size 100% 100%
.b-competence-block.b-security
	background url('../img/competence_bg3.jpg') center no-repeat
	background-size 100% 100%
.b-competence-block.b-ventilation
	background url('../img/competence_bg4.jpg') center no-repeat
	background-size 100% 100%
.b-competence-block.b-automation
	background url('../img/competence_bg5.jpg') center no-repeat
	background-size 100% 100%
