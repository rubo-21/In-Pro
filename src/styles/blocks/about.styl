.b-statistics
	position relative
	width 100%
	height 852px /* 752px */
	margin-top -150px
	background url('../img/about_bg.jpg') center no-repeat
	background-size 100% 100%
	&__wrap
		position relative
		min-width 980px
		max-width 1500px
		height 100%
		margin 0 auto
	&__hint
		position absolute
		width 668px
		height 202px
		top 280px
		left 170px
		padding 31px
		text-transform uppercase
		line-height 35px
		font-size 24px
		color #fff
		background url('../img/about_statistics_bg.png') center no-repeat
		background-size 100% 100%
	&__hint2
		position absolute
		width 38%
		height 202px
		top 380px
		right 0
		line-height 28px
		font-size 20px
		color #fff
	&__block
		position absolute
		bottom 50px
		left 50px
		width 545px
		color #fff
		clearfix()
		&__leftSide
			float left
		&__rightSide
			float right
			& div:last-child
				width: 170px;
				text-align: right;
		& div
			font-size 30px
		& div span
			font-size 71px
	&__text
		font-size 15px !important

.b-partners
	position relative
	width 100%
	height 640px
	background #fff
	overflow hidden
	&__header
		margin 80px auto
		text-align center
		font-size 48px
		color #1a1a18
	&__text
		max-width 1185px
		margin 90px auto 0
		text-align center
		font-size 24px
		color #6e6e6e

.b-partners-owl-carousel
	&__item
		position relative
		margin 0 10px
		height 90px
		text-align center
		& img
			display block
			width auto
			height auto
			max-height 100px
			transform translateY(-50%)
			margin 23% auto 0
		& p
			bottom 5px
			position absolute
			text-align center
			width 100%
	.owl-buttons i
		line-height 40px
		font-size 25px
		color #33b1e8

	.owl-controls .owl-buttons div
		position absolute
		top 23%
		border-radius 40px
		width 40px
		height 40px
		padding 0
		background #fff
		border 1px solid #33b1e8
	.owl-controls .owl-buttons .owl-prev
		left 0
	.owl-controls .owl-buttons .owl-next
		right 0


