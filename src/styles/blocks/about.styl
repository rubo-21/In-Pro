.b-vacancies
	&__header
		position relative
		text-align center
		&__text
			margin 97px auto 0
			font-weight bold
			font-size 48px
			color #1a1a18
		&__text2
			max-width 1118px
			margin 68px auto
			font-size 33px
			color #6e6e6e
		&::after
			content " "
			position absolute
			bottom -112px
			left 49%
			width 83px
			height 45px
			z-index 1
			background url('../img/triangel.png') center no-repeat
			background-size 100% 100%
	&__content
		position relative
		width 100%
		height 687px
		margin auto
		background url('../img/vacancies_bg.jpg') center no-repeat
		background-size 100% 100%
		overflow hidden
		&__wrap
			position relative
			width 1400px
			height 439px
			margin auto
			clearfix()
			& > div
				width 700px
				height 439px
				margin 135px auto
				float left
				font-size 20px
		&__left
			padding 52px 98px
			background rgba(5, 38, 61, .7)
			color #fff
			&__header
				margin-bottom 35px
				text-transform uppercase
			&__text
				line-height 36px
				& span
					color #009de2
		&__right
			padding 52px 114px
			background rgba(255, 255, 255, .9)
			&__header
				margin-bottom 30px
				text-transform uppercase
				color #6e6e6e
			&__text
				& a
					line-height 30px
					color #008ad1
	&__texts
		position relative
		overflow hidden
		background #F5F5F5
	&__text
		max-width 1222px
		margin 67px auto
		line-height 36px
		font-size 24px
		color #6e6e6e
		& a
			color #008ad1;

