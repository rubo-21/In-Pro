.b-footer
	position relative
	min-width 980px
	max-width 1500px
	height 140px
	margin 0 auto
	clearfix()
	z-index 1
	overflow hidden
	&__wrapper
		position relative
		width 100%
		height 140px
		margin 0 auto
		background url('../img/header_bg.jpg') center no-repeat
		background-size 100% 100%
	&__address
		position absolute
		left 55px
		bottom 35px
		&__text
			font-size 21px
			color #fff
			line-height 32px
	&__contact
		position absolute
		right 55px
		bottom 35px
		&__text a
			font-size 21px
			color #fff
			line-height 32px
